{
  "name": "hold-my-beer-client",
  "version": "1.0.0",
  "description": "A front-end app for raspi-chill temperature regulation logs",
  "main": "index.tsx",
  "author": "bens.schmitt@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development && parcel ./src/index.html --open",
    "build": "NODE_ENV=production && rm -r dist || true && npm run compile && ./node_modules/parcel-bundler/bin/cli.js build ./src/index.html --no-source-maps --detailed-report --public-url 'http://hold-my-beer.smitchdigital.com/'",
    "test": "jest",
    "compile": "tsc --noEmit",
    "deploy": "./scripts/deploy.sh"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.1",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/styles": "^4.5.0",
    "bulma": "^0.7.5",
    "chart.js": "^2.7.3",
    "localforage": "^1.7.3",
    "moment": "^2.22.2",
    "react": "^16.10.2",
    "react-countdown-now": "^1.3.0",
    "react-dom": "^16.10.2",
    "react-select": "^3.0.8"
  },
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/moment": "^2.13.0",
    "@types/node": "^10",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  }
}
