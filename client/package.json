{
  "name": "hold-my-beer",
  "version": "1.0.0",
  "description": "A front-end app for raspi-chill temperature regulation logs",
  "main": "index.tsx",
  "author": "bens.schmitt@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "parcel ./src/index.html",
    "build": "rm -r dist && npm run compile && parcel build ./src/index.html --no-source-maps --public-url 'http://hold-my-beer.smitchdigital.com/'",
    "test": "jest",
    "compile": "tsc --noEmit",
    "deploy": "aws s3 sync dist/ s3://hold-my-beer.smitchdigital.com"
  },
  "dependencies": {
    "@material-ui/core": "^3.3.2",
    "bulma": "^0.7.2",
    "chart.js": "^2.7.3",
    "material-ui": "^0.20.2",
    "moment": "^2.22.2",
    "react": "^16.3.0",
    "react-countdown-now": "^1.3.0",
    "react-dom": "^16.3.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.7",
    "@types/material-ui": "^0.21.5",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/request-promise": "^4.1.42",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  }
}
